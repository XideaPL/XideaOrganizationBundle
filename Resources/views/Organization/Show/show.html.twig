{% extends xidea_template('organization_main') %}
{% block bundle_title %}
    <h1 class="page-header">{{ 'organization_show.title'|trans({'%name%':model.name}) }}</h1>
{% endblock %}
{% block bundle_main %}
    <div class="box box-default">
        <div class="box-header">
            <h3 class="box-title">{{ 'organization_show.details.title'|trans }}</h3>
        </div>
        <!-- /.box-heading -->
        <div class="box-body">
            <div class="organization-details">
                <table class="table table-bordered table-striped organization-table">
                    <tbody>
                      <tr>
                        <th scope="row">
                          <code>{{ 'organization.name'|trans }}</code>
                        </th>
                        <td>{{ model.name }}</td>
                      </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
{% endblock %}
